{
  "name": "figlet-console-webpack-plugin",
  "version": "1.0.0-alpha",
  "description": "A application version output in the console with figlet + webpack plugin",
  "keywords": [
    "figlet",
    "webpack v5"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": "wulin",
  "license": "MIT",
  "scripts": {
    "build": " rm -rf dist && tsc",
    "publish": "npm publish",
    "unpublish": "npm unpublish --force figlet-console-webpack-plugin",
    "release": "standard-version -r 1.0.0-alpha",
    "eslint": "eslint './src/*' --fix"
  },
  "bugs": {
    "url": "https://github.com/qiuysh/figlet-console-webpack-plugin/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/qiuysh/figlet-console-webpack-plugin"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@types/node": "^17.0.23",
    "@typescript-eslint/eslint-plugin": "^5.18.0",
    "@typescript-eslint/parser": "^5.18.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.12.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^4.3.8",
    "lint-staged": "^12.3.7",
    "prettier": "^2.6.2",
    "standard-version": "^9.3.2",
    "typescript": "^4.6.3"
  },
  "dependencies": {
    "figlet": "^1.5.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier -w"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
